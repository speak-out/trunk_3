<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verification_bg"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top"
        android:textColor="@color/title_color"
        android:textSize="@dimen/activity_verification_title"
        android:layout_gravity="center"
        android:text="@string/verification_title"
        />

    <LinearLayout
        android:id="@+id/ll_input_number"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_verification_edittext_height"
        android:layout_marginTop="@dimen/activity_verification_edittext_margitop"
        android:layout_marginLeft="@dimen/activity_verification_edittext_margin_left_right"
        android:layout_marginRight="@dimen/activity_verification_edittext_margin_left_right"
        android:background="@drawable/edit_input_board"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_edt_1"
            style="@style/input_edittext"
            android:background="@drawable/edit_input_borad_frist"
            />
        <TextView
            android:id="@+id/txt_edt_2"
            style="@style/input_edittext" />
        <TextView
            android:id="@+id/txt_edt_3"
            style="@style/input_edittext" />
        <TextView
            android:id="@+id/txt_edt_4"
            style="@style/input_edittext" />
        <TextView
            android:id="@+id/txt_edt_5"
            style="@style/input_edittext" />
        <TextView
            android:id="@+id/txt_edt_6"
            style="@style/input_edittext" />
        <TextView
            android:id="@+id/txt_edt_7"
            style="@style/input_edittext" />
        <TextView
            android:id="@+id/txt_edt_8"
            style="@style/input_edittext"
            android:layout_marginRight="1dp"
            android:background="@drawable/edit_input_borad_last"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/txt_input_error_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/activity_verification_edittext_margitop"
        android:textColor="@color/verification_input_error_title"
        android:textSize="@dimen/activity_verification_input_error_title_size"
        />

    <com.cloudream.hime.business.weight.InputKeyBoardView
        android:id="@+id/input_keyboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </com.cloudream.hime.business.weight.InputKeyBoardView>
</LinearLayout>