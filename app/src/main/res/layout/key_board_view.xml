<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView style="@style/number_fengexian" />

            <LinearLayout style="@style/number_linear">

                <TextView
                    android:id="@+id/txt_1"
                    style="@style/number_text"
                    android:layout_marginLeft="2dp"

                    android:text="1" />

                <TextView
                    android:id="@+id/txt_2"
                    style="@style/number_text"

                    android:text="2" />

                <TextView
                    android:id="@+id/txt_3"
                    style="@style/number_text"
                    android:layout_marginRight="1dp"
                    android:text="3" />

            </LinearLayout>

            <TextView style="@style/number_fengexian" />

            <LinearLayout style="@style/number_linear">

                <TextView
                    android:id="@+id/txt_4"
                    style="@style/number_text"
                    android:layout_marginLeft="2dp"
                    android:text="4" />

                <TextView
                    android:id="@+id/txt_5"
                    style="@style/number_text"

                    android:text="5" />

                <TextView
                    android:id="@+id/txt_6"
                    style="@style/number_text"
                    android:layout_marginRight="1dp"
                    android:text="6" />

            </LinearLayout>

            <TextView style="@style/number_fengexian" />

            <LinearLayout style="@style/number_linear">

                <TextView
                    android:id="@+id/txt_7"
                    style="@style/number_text"
                    android:layout_marginLeft="2dp"
                    android:layout_marginBottom="1dp"
                    android:text="7" />

                <TextView
                    android:id="@+id/txt_8"
                    style="@style/number_text"
                    android:layout_marginBottom="1dp"
                    android:text="8" />

                <TextView
                    android:id="@+id/txt_9"
                    style="@style/number_text"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="1dp"
                    android:text="9" />
            </LinearLayout>

            <TextView style="@style/number_fengexian" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/input_keyboard_fengexian"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_delete"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
               android:background="@drawable/input_keyboard_0_selector"
                android:gravity="center"
                android:text="删除" />

            <TextView style="@style/number_fengexian" />

            <TextView
                android:id="@+id/txt_0"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_marginLeft="-1dp"
                style="@style/number_text"
              android:textColor="@color/white"
                android:background="@drawable/input_keyboard_0_selector"
                android:text="0" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>